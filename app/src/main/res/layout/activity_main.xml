<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSecretWord"
        android:layout_width="354dp"
        android:layout_height="74dp"
        android:layout_marginBottom="12dp"
        android:onClick="btnSecretWord_OnClick"
        android:text="Save secret word"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSecretWord"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="354dp"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/back"
        android:cursorVisible="true"
        android:editable="true"
        android:enabled="true"
        android:focusable="auto"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="put secret word here"
        android:textAlignment="center"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSecretWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnStartStop"
        android:layout_width="354dp"
        android:layout_height="74dp"
        android:layout_marginBottom="16dp"
        android:onClick="btnStartStop_OnClick"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="354dp"
        android:layout_height="3dp"
        android:layout_marginBottom="12dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/btnStartStop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_LaunchMaps"
        android:layout_width="354dp"
        android:layout_height="42dp"
        android:layout_marginBottom="22dp"
        android:onClick="checkBox_LaunchMaps_OnClick"
        android:text="Launch maps immediately"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvSecretWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_ScreenOn"
        android:layout_width="354dp"
        android:layout_height="42dp"
        android:layout_marginBottom="11dp"
        android:onClick="checkBox_ScreenOn_OnClick"
        android:text="Keep the screen on"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_LaunchMaps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_WakeUp"
        android:layout_width="354dp"
        android:layout_height="42dp"
        android:layout_marginBottom="11dp"
        android:onClick="checkBox_WakeUp_OnClick"
        android:text="Wake up device"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_ScreenOn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>